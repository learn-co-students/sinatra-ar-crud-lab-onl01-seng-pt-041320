<form method="post" action="/articles/<%= @article_edit.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<label for="title">Title: </label>
<input type="text" name="title" value="<%= @article_edit.title %>">
<br><br>
<label for="content">Content: </label>
<textarea id="content" name="content" rows="4" cols="50"><%= @article_edit.content %></textarea>
<br><br>
<input type="submit" value="submit">
</form>